<% user || current_user %>
<div class="stats">
  <%= link_to following_user_path(user, follow: "following") do %>
    <strong id="following" class="stat">
      <%= user.following.count %>
    </strong>
    <%= t ".following" %>
  <% end %>
  <%= link_to  followers_user_path(user, follow: "followers") do %>
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong>
    <%= t ".followers" %>
  <% end %>
</div>
