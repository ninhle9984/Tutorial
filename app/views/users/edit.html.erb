<% provide :title, t(".title") %>
<% provide :button_text, t(".submit") %>

<h1><%= t ".edit" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user, gender: @genders %>
    <div class="gravatar-edit">
      <%= gravatar_for @user %>
      <%= link_to  t(".change"), "http://gravatar.com/emails", target: "_blank"  %>
    </div>
  </div>
</div>
