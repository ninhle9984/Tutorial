<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <br/>
        <%= t ".#{@user.gender}" %>
        <br/>
        <%= @user.age %>
      </h1>
    </section>
    <section class="stats" >
      <%= render "shared/stats", user: @user %>
    </section>
  </aside>

  <div class="col-md-8">
    <% if logged_in? %>
      <%= render "follow_form", user: @user, relation: @relation %>
    <% end %>
    <% if @user.microposts.any? %>
      <h3><%= t ".microposts" %> <%= @user.microposts.count %></h3>
        <%= render "shared/feed", feed_items: @microposts %>
    <% end %>
  </div>
</div>
